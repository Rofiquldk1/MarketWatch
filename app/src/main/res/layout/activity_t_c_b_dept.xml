<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TCBDeptActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="?actionBarSize"
                android:padding="20dp"
                android:text="TCB Department"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />
        </com.google.android.material.appbar.AppBarLayout>
        <LinearLayout
            android:id="@+id/linear_21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="150dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_select_prd_tcb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Select Product"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <Spinner
                android:id="@+id/spinner_select_prd_tcb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:entries="@array/dept_name"/>
            <TextView
                android:id="@+id/txt_select_prdCd_tcb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Select Product Code"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <Spinner
                android:id="@+id/spinner_select_prdCd_tcb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:entries="@array/dept_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Local Price"
                android:layout_marginTop="15dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_local_pri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_alignParentStart="true"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="International Price"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_inter_pri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_alignParentStart="true"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/linear_21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_add_tcb"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Add"
                android:textSize="13sp"
                android:textColor="#ffffff"
                android:background="@drawable/bk_button"/>
            <Button
                android:id="@+id/btn_update_tcb"
                android:layout_marginLeft="20dp"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Update"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:background="@drawable/bk_button"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>